  <script>
    let chuvaIniciada = false;

    function irParaTela2() {
      mostrarTela('tela2');
      if (!chuvaIniciada) {
        iniciarChuva();
        chuvaIniciada = true;
      }
      setTimeout(() => mostrarTela('tela3'), 3000);
    }

    function mostrarTela(id) {
      document.querySelectorAll('.tela').forEach(t => t.classList.remove('active'));
      document.getElementById(id).classList.add('active');
      if (id === 'tela4') initJogo();
    }

    function iniciarChuva() {
      setInterval(() => {
        const h = document.createElement('div');
        h.classList.add('heart');
        h.style.left = Math.random() * 100 + "vw";
        h.style.animationDuration = (Math.random() * 3 + 2) + "s";
        document.body.appendChild(h);
        setTimeout(() => h.remove(), 5000);
      }, 200);
    }

    function tocarMusica() {
      const iframe = document.getElementById("player");
      iframe.contentWindow.postMessage('{"method":"play"}', '*');
      document.getElementById("btnMusica").style.display = "none";
    }

    // Jogo da mem√≥ria
    const emojis = ['üíñ', 'üíò', 'üíï', 'üíù', 'üíó', 'üíì', 'üíû', '‚ù§Ô∏è'];
    let cards = [...emojis, ...emojis];
    let firstCard = null;
    let secondCard = null;
    let lock = false;

    function initJogo() {
      const grid = document.getElementById('grid');
      grid.innerHTML = '';
      shuffle(cards);
      cards.forEach((emoji, index) => {
        const div = document.createElement('div');
        div.className = 'card';
        div.dataset.emoji = emoji;
        div.dataset.index = index;
        div.textContent = '‚ùì';
        div.onclick = () => flipCard(div);
        grid.appendChild(div);
      });
    }

    function flipCard(card) {
      if (lock || card.textContent !== '‚ùì') return;

      card.textContent = card.dataset.emoji;

      if (!firstCard) {
        firstCard = card;
      } else {
        secondCard = card;
        lock = true;

        if (firstCard.dataset.emoji === secondCard.dataset.emoji) {
          firstCard = null;
          secondCard = null;
          lock = false;
          if ([...document.querySelectorAll('.card')].every(c => c.textContent !== '‚ùì')) {
            setTimeout(() => mostrarTela('tela5'), 1000);
          }
        } else {
          setTimeout(() => {
            firstCard.textContent = '‚ùì';
            secondCard.textContent = '‚ùì';
            firstCard = null;
            secondCard = null;
            lock = false;
          }, 1000);
        }
      }
    }

    function shuffle(arr) {
      for (let i = arr.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [arr[i], arr[j]] = [arr[j], arr[i]];
      }
    }
  </script>
